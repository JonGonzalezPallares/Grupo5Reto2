<resources>
    <!-- Base application theme. -->
    <style name="Theme.RetoMuzkiz" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#781AAA</item>
        <item name="colorPrimaryVariant">#083700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Color fragmentos del puente -->
    <style name="colorFragment">
        <item name="android:textColor">#C60101</item>
    </style>
    <!-- Color campos de texto -->
    <style name="colorTxt">
        <item name="android:textColor">#C9C9C9</item>
    </style>
</resources>