<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_mapa"
    android:padding="10dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <!--layout de los buttones-->
    <ImageButton
        android:id="@+id/btn_atras"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="160dp"
        android:src="@android:drawable/ic_media_previous"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btn_seguiente"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="160dp"
        android:src="@android:drawable/ic_media_next"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_salir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Jugar" />

    <!--layout de parrafos-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btn_salir"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="58dp"
        android:background="@drawable/pergamino_fondo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_parrafo"
            android:layout_width="437dp"
            android:layout_height="169dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="80dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            tools:text="El mendean eraiki zenbbdbdbdsbsfbsfdbdsbsdbbbsbdfsd, eta Muskiz zen herriko zubirik zaharrena." />
    </LinearLayout>


</RelativeLayout>