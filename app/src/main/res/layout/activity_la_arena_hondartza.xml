        <ImageButton
            android:id="@+id/boton00"
            android:layout_width="100dp"
            android:layout_height="94dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@color/black" />
    </GridLayout>

</LinearLayout>