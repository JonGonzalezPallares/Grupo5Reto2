<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_servicio"
    android:layout_width="match_parent"
    android:layout_height="650px"
    android:layout_margin="12dp"
    app:ignore="NamespaceTypo"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="228dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="213dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Titulo"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btniniciarjuego"
                android:layout_width="119dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"

                android:background="@drawable/stilo_desplegable_boton_jugar"
                android:foreground="?attr/selectableItemBackgroundBorderless"


                android:src="@drawable/jugar_blanco"
                android:text="Jugar" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="178dp"
            android:layout_height="121dp"
            android:layout_gravity="center_horizontal"
            card_view:cardCornerRadius="40dp">

            <ImageView
                android:id="@+id/img"
                android:layout_width="178dp"
                android:layout_height="123dp"
                card_view:srcCompat="@drawable/bandera_muskiz" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>
