<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_actividad"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:layout_margin="12dp"
    app:ignore="NamespaceTypo"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="600dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="114dp"
            android:background="@color/white"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="195dp"
                android:layout_height="62dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Titulo"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btniniciarjuego"
                android:layout_width="119dp"
                android:layout_height="63dp"
                android:layout_gravity="center"

                android:background="@drawable/stilo_desplegable_boton_jugar"
                android:foreground="?attr/selectableItemBackgroundBorderless"


                android:src="@drawable/jugar_blanco"
                android:text="Jugar"
                app:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="369dp"
            android:layout_height="452dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="313dp"
                android:layout_height="306dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="35dp"
                card_view:cardCornerRadius="40dp">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="358dp"
                    android:layout_height="339dp"
                    android:layout_gravity="center_horizontal|center_vertical" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="50dp"
        android:layout_height="14dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/stilo_desplegable_boton"
        android:gravity="center_horizontal" />

</androidx.cardview.widget.CardView>
