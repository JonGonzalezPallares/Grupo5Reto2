<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ponekakoermita.JuegodemarActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/irudiapobena3" />

    <Button
        android:id="@+id/btncorrect"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginStart="134dp"
        android:layout_marginEnd="316dp"
        android:layout_marginBottom="24dp"
        android:text="@string/cardsMatch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnIncorrect"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnIncorrect"
        android:layout_width="0dp"
        android:layout_height="67dp"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="24dp"
        android:text="@string/incorrecto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btncorrect" />
</androidx.constraintlayout.widget.ConstraintLayout>