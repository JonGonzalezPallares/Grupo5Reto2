<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/irudiapobena3"
    tools:context=".ponekakoermita.JuegodemarActivity">

    <ImageView
        android:id="@+id/imgMar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/binoculares"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTranquilo"
        android:layout_width="122dp"
        android:layout_height="50dp"
        android:layout_marginStart="160dp"
        android:text="@string/mar_tranquilo"
        app:layout_constraintBottom_toBottomOf="@+id/btnIncorrect"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnIncorrect"
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="16dp"
        android:text="@string/mar_revuelto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>