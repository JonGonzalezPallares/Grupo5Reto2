<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".puenteRomano.PuenteJuego">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/TrozoPreg1"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btnComprobar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="40dp"
            android:text="@string/puente_romano_preg_1"
            android:textColor="@color/botones_desactivados"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/rdb_Res1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/rdb_Res1"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RadioButton
                android:id="@+id/rb_res1_1"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:text="@string/puente_preg_1_res_1" />

            <RadioButton
                android:id="@+id/rb_res1_2"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:text="@string/puente_preg_1_res_2" />

            <RadioButton
                android:id="@+id/rb_res1_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/puente_preg_1_res_3" />
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/TrozoPreg2"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="1sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btnComprobar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:text="@string/puente_romano_preg_2"
            android:textColor="@color/botones_desactivados"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/rdb_Res2"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RadioButton
                android:id="@+id/rb_res2_1"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:text="@string/puente_preg_2_res_1" />

            <RadioButton
                android:id="@+id/rb_res2_2"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:text="@string/puente_preg_2_res_2" />

            <RadioButton
                android:id="@+id/rb_res2_3"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:text="@string/puente_preg_2_res_3" />
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/TrozoPreg3"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="1sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btnComprobar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:text="@string/puente_romano_preg_3"
            android:textColor="@color/botones_desactivados"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/rdb_Res3"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RadioButton
                android:id="@+id/rb_res3_1"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:text="@string/puente_preg_3_res_1" />

            <RadioButton
                android:id="@+id/rb_res3_2"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:text="@string/puente_preg_3_res_2" />

            <RadioButton
                android:id="@+id/rb_res3_3"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:text="@string/puente_preg_3_res_3" />
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/TrozoPreg4"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="1sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btnComprobar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:text="@string/puente_romano_preg_4"
            android:textColor="@color/botones_desactivados"
            android:textSize="30sp"
