                android:text="@string/puente_preg_4_res_1" />

            <RadioButton
                android:id="@+id/rb_res4_2"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:text="@string/puente_preg_4_res_2" />

            <RadioButton
                android:id="@+id/rb_res4_3"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:text="@string/puente_preg_4_res_3" />
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imgTrozo1"
        android:layout_width="89sp"
        android:layout_height="220sp"
        android:layout_marginStart="30sp"
        android:layout_marginBottom="36sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgTrozo2"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/fotopuente1" />

    <ImageView
        android:id="@+id/imgTrozo2"
        android:layout_width="89sp"
        android:layout_height="220sp"
        android:layout_marginBottom="36sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgTrozo3"
        app:layout_constraintStart_toEndOf="@+id/imgTrozo1"
        app:srcCompat="@drawable/fotopuente2" />

    <ImageView
        android:id="@+id/imgTrozo3"
        android:layout_width="89sp"
        android:layout_height="220sp"
        android:layout_marginBottom="36sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgTrozo4"
        app:layout_constraintStart_toEndOf="@+id/imgTrozo2"
        app:srcCompat="@drawable/fotopuente3" />

    <ImageView
        android:id="@+id/imgTrozo4"
        android:layout_width="89sp"
        android:layout_height="220sp"
        android:layout_marginEnd="30sp"
        android:layout_marginBottom="36sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgTrozo3"
        app:srcCompat="@drawable/fotopuente4" />

    <ImageView
        android:id="@+id/imgFinal"
        android:layout_width="356sp"
        android:layout_height="219sp"
        android:layout_marginStart="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="36sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/puentecompleto" />

    <Button
        android:id="@+id/btnComprobar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164sp"
        android:layout_marginEnd="153sp"
        android:background="@drawable/estilo_botones"
        android:enabled="false"
        android:text="Comprobar"
        app:layout_constraintBottom_toTopOf="@+id/imgFinal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>