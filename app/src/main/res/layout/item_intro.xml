<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/per"
    android:padding="10dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <!--layout de parrafos-->

    <!--layout de los buttones-->


    <ImageButton
        android:id="@+id/btn_atras"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="80dp"
        android:src="@android:drawable/ic_media_previous" />

    <ImageButton
        android:id="@+id/btn_seguiente"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="80dp"
        android:src="@android:drawable/ic_media_next" />

    <Button
        android:id="@+id/btn_salir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Jugar" />

    <TextView
        android:id="@+id/tv_parrafo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btn_atras"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="58dp"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        tools:text="El mendean eraiki zen, eta Muskiz zen herriko zubirik zaharrena." />


</RelativeLayout>