<resources>
    <!-- Base application theme. -->
    <style name="Theme.RetoMuzkiz" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#AB17E1</item>
        <item name="colorPrimaryVariant">@color/botones_desactivados</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
    </style>
    <!-- Color fragmentos del puente -->
    <style name="colorFragment">
        <item name="android:textColor">#703C10</item>
    </style>
    <style name="Imagenes">
        <item name="background">@drawable/stilo_desplegable_imagen</item>
    </style>
    <style name="splashscreen" parent="Theme.RetoMuzkiz">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>


<style name="menu">

</style>
</resources>